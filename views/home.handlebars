<link rel="stylesheet" href="/css/main_numbers.css">
<center>
    <h1>Home</h1>
</center>
<center>
    <h2>{{recipes_count}} Reciepes From {{chef_count}} Chefs</h2>
    <p>Questions? Checkout our
        <a href="/about" data-test-id="about">about US</a> page!
    </p>
    <div class="row" style="display: flex; justify-content: space-evenly">
        {{#each recipes}}
            <div class="column">
                <div class="card">
                    <a href='{{link}}'>
                        <img src = {{img_link}} alt={{alt}} style="width:100%">
                        <div class="container">
                            <h2>{{name}}</h2>
                            <p><button class="button">View</button></p>
                        </div>
                    </a>
                </div>
            </div>
        {{/each}}
    </div>
    
</center>
